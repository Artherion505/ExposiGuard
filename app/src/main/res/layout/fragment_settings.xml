<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context="com.exposiguard.app.ui.SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Título Principal -->
        <TextView
            android:id="@+id/text_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_title"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sección de Perfil de Usuario -->
        <TextView
            android:id="@+id/user_profile_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_user_profile"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/text_settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Campo de Peso -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/weight_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Peso (kg)"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@id/user_profile_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/height_input_layout">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/weight_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="@string/settings_weight_value"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="?attr/colorOnSurface" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Campo de Altura -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/height_input_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Altura (cm)"
            android:layout_marginStart="8dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:layout_constraintTop_toBottomOf="@id/user_profile_title"
            app:layout_constraintStart_toEndOf="@id/weight_input_layout"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/height_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="@string/settings_height_value"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="?attr/colorOnSurface" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Información de IMC -->
        <TextView
            android:id="@+id/imc_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_bmi_info"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/weight_input_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Selector de Estándar de Exposición -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/standard_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/settings_standard_hint"
            android:layout_marginTop="16dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            app:layout_constraintTop_toBottomOf="@id/imc_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:id="@+id/standard_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="@string/settings_fcc_usa"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="?attr/colorOnSurface" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Botón Calcular IMC -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/calculate_imc_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/settings_btn_calc_bmi"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:layout_constraintTop_toBottomOf="@id/standard_input_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/save_profile_button" />

        <!-- Botón Guardar Perfil -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/save_profile_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/settings_btn_save_profile"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            style="@style/Widget.Material3.Button.ElevatedButton"
            app:layout_constraintTop_toBottomOf="@id/standard_input_layout"
            app:layout_constraintStart_toEndOf="@id/calculate_imc_button"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sección de Idioma -->
        <TextView
            android:id="@+id/language_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_language_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/save_profile_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Selector de Idioma -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/language_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/settings_language_hint"
            android:layout_marginBottom="32dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            app:layout_constraintTop_toBottomOf="@id/language_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:id="@+id/language_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="@string/settings_spanish"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="?attr/colorOnSurface" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Descripción del selector de idioma -->
        <TextView
            android:id="@+id/language_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_language_description"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/language_input_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sección de Monitoreo -->
        <TextView
            android:id="@+id/monitoring_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_monitoring_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/language_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Switch para Monitoreo Continuo -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/continuous_monitoring_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_monitoring_switch"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/monitoring_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Descripción del Monitoreo Continuo -->
        <TextView
            android:id="@+id/monitoring_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_monitoring_desc"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/continuous_monitoring_switch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Selector de Intervalo -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/interval_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/settings_interval_hint"
            android:layout_marginBottom="32dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            app:layout_constraintTop_toBottomOf="@id/monitoring_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:id="@+id/interval_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="@string/settings_interval_value"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="?attr/colorOnSurface" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Selector de Ventana de Promediado -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/averaging_window_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/settings_averaging_window_hint"
            android:layout_marginBottom="24dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            app:layout_constraintTop_toBottomOf="@id/interval_input_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:id="@+id/averaging_window_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="@string/settings_averaging_window_value"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:textColor="?attr/colorOnSurface" />

        </com.google.android.material.textfield.TextInputLayout>

    <!-- Sección de Apariencia eliminada: se fuerza modo oscuro; se retira toggle que causaba parpadeos -->

        <!-- Checkboxes: Tabs incluidas en monitoreo continuo -->
        <TextView
            android:id="@+id/monitoring_tabs_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_monitoring_tabs"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/averaging_window_input_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <CheckBox
            android:id="@+id/monitor_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_home_tab"
            android:checked="true"
            app:layout_constraintTop_toBottomOf="@id/monitoring_tabs_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <CheckBox
            android:id="@+id/monitor_wifi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_wifi_tab"
            android:checked="true"
            app:layout_constraintTop_toBottomOf="@id/monitor_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <CheckBox
            android:id="@+id/monitor_emf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_emf_tab"
            android:checked="true"
            app:layout_constraintTop_toBottomOf="@id/monitor_wifi"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <CheckBox
            android:id="@+id/monitor_noise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_noise_tab"
            android:checked="true"
            app:layout_constraintTop_toBottomOf="@id/monitor_emf"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Sección Experimental agrupada -->
        

        <!-- Información de Batería -->
        <TextView
            android:id="@+id/battery_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_battery_info"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/monitor_noise"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
