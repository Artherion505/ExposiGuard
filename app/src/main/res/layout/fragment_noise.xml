<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".ui.noise.NoiseFragment">

    <TextView
        android:id="@+id/text_noise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="?attr/colorOnSurface"
        android:text="@string/noise_monitor_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/noise_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="?attr/colorSurface"
        app:cardCornerRadius="12dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/text_noise"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_noise_live"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/noise_current_level"
                android:textSize="16sp"
                android:textColor="?attr/colorOnSurface"
                android:paddingBottom="8dp" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/noise_progress"
                style="@style/Widget.Material3.LinearProgressIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:trackThickness="10dp"
                android:indeterminate="false"
                android:max="100" />

            <TextView
                android:id="@+id/text_noise_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/noise_result"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:paddingTop="8dp" />

            <TextView
                android:id="@+id/text_noise_index"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/noise_index"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:paddingTop="8dp" />

            <com.exposiguard.app.ui.views.SparklineView
                android:id="@+id/noise_sparkline"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/text_noise_scale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/noise_scale"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center"
                android:paddingTop="4dp"
                android:contentDescription="Escala de referencia de niveles de decibelios" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_toggle_continuous"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/noise_start_monitoring"
                    style="@style/Widget.Material3.Button.ElevatedButton" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_quick_sample"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/noise_quick_measurement"
                    style="@style/Widget.Material3.Button.OutlinedButton" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
