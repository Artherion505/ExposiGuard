<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WiFiFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?attr/colorSurface">

        <!-- Información EMF -->
        <TextView
            android:id="@+id/text_emf_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wifi_emf_fields"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="20dp"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Espacio debajo del título EMF -->
        <Space
            android:id="@+id/emf_title_spacer"
            android:layout_width="0dp"
            android:layout_height="8dp"
            app:layout_constraintTop_toBottomOf="@id/text_emf_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/text_emf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wifi_emf_info_placeholder"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6dp"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:background="@drawable/rounded_background_secondary"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toBottomOf="@id/emf_title_spacer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Información WiFi -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/wifi_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:layout_constraintTop_toBottomOf="@id/text_emf"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Header fila: título + status + botón -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/text_wifi_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/wifi_wifi_label"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:textColor="?attr/colorOnSurface" />

                    <TextView
                        android:id="@+id/text_wifi_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wifi_dash_placeholder"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_retry_scan"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wifi_retry"
                        android:minWidth="0dp"
                        android:paddingHorizontal="12dp" />
                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/wifi_filter_layout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@string/wifi_filter_ssid_hint">

                    <AutoCompleteTextView
                        android:id="@+id/wifi_filter_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textSize="14sp"
                        android:imeOptions="flagNoExtractUi" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/text_wifi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/wifi_network_info"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="8dp"
                    android:padding="12dp"
                    android:background="@drawable/rounded_background_secondary"
                    android:textColor="?attr/colorOnSurface" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Información Telefonía -->
        <TextView
            android:id="@+id/text_telephony_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wifi_mobile_network"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="20dp"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toBottomOf="@id/wifi_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/text_telephony"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wifi_mobile_info_placeholder"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6dp"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:background="@drawable/rounded_background_secondary"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toBottomOf="@id/text_telephony_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Información Bluetooth -->
        <TextView
            android:id="@+id/text_bluetooth_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wifi_bluetooth_devices"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="20dp"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toBottomOf="@id/text_telephony"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/text_bluetooth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/wifi_bluetooth_placeholder"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6dp"
            android:layout_marginTop="8dp"
            android:padding="16dp"
            android:background="@drawable/rounded_background_secondary"
            android:textColor="?attr/colorOnSurface"
            app:layout_constraintTop_toBottomOf="@id/text_bluetooth_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
