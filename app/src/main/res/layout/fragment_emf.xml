<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/emf_summary_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="16dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_limit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/emf_limit_label"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/text_current"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/emf_total_estimated"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progress"
                    style="@style/Widget.Material3.LinearProgressIndicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:trackThickness="8dp"
                    android:layout_marginBottom="12dp"
                    android:max="100"
                    android:progress="0" />

                <!-- ChipGroup para desglose -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/breakdown_chips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:singleLine="false"
                    app:chipSpacing="4dp" />

                <TextView
                    android:id="@+id/text_breakdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/emf_breakdown"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/text_recommendations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/emf_recommendations"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/emf_monthly_summary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <com.exposiguard.app.ui.views.BarChartView
            android:id="@+id/bar_chart"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/rounded_background_secondary" />

        <!-- Spacer para asegurar margen de scroll al final -->
        <View
            android:layout_width="match_parent"
            android:layout_height="48dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
