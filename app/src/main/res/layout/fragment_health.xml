<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".ui.health.HealthFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/button_container"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/colorSurface"
            app:strokeWidth="0dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/health_data_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/health_loading_data"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:lineSpacingExtra="4dp" />

        </com.google.android.material.card.MaterialCardView>

    </ScrollView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="?attr/colorSurface"
        app:strokeWidth="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/health_integrations"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/health_connect_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/health_connect"
                android:textSize="14sp"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_marginBottom="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/connect_smartwatch_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/health_connect_smartwatch"
                android:textSize="14sp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/health_actions"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sync_smartwatch_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/health_sync_smartwatch"
                android:textSize="14sp"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:layout_marginBottom="4dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/refresh_health_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/health_update_data"
                android:textSize="14sp"
                style="@style/Widget.Material3.Button.ElevatedButton" />
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
