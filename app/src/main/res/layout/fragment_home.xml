<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:paddingTop="@dimen/status_bar_height"
        android:background="?attr/colorSurface">

        <!-- Título principal simplificado -->
        <TextView
            android:id="@+id/text_home_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_current_status"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Progress bar para cálculo inicial -->
        <ProgressBar
            android:id="@+id/progress_initial_calculation"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:indeterminate="true"
            android:visibility="visible"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/home_calculating" />

    <!-- Semáforo de exposición + Indicador circular -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/traffic_light_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        android:orientation="vertical"
                android:padding="16dp">

                <!-- Chip de estado -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_exposure_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_calculating"
                    style="@style/Widget.Material3.Chip.Assist"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:contentDescription="Estado de exposición"
                    android:layout_gravity="center_horizontal"
                    app:chipIconVisible="false" />

                <!-- Indicador circular con porcentaje -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progress_exposure_circular"
                        style="@style/Widget.Material3.CircularProgressIndicator"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:trackThickness="8dp"
                        app:indicatorSize="64dp"
                        android:max="100"
                        android:progress="0" />

                    <TextView
                        android:id="@+id/text_exposure_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:text="0%"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Icono de ayuda con tooltip: explica Diario vs Ahora -->
                    <ImageView
                        android:id="@+id/icon_help_now"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@string/home_help"
                        android:src="@android:drawable/ic_menu_help"
                        android:tooltipText="@string/home_tooltip_daily_now"
                        />
                </LinearLayout>

                <!-- Semáforo visible -->
                <LinearLayout
                    android:id="@+id/semaphore_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/light_red_visible"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/circle_light"
                        android:contentDescription="@string/semaphore_light_red" />
                    <ImageView
                        android:id="@+id/light_yellow_visible"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/circle_light"
                        android:contentDescription="@string/semaphore_light_yellow" />
                    <ImageView
                        android:id="@+id/light_green_visible"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/circle_light"
                        android:contentDescription="@string/semaphore_light_green" />
                </LinearLayout>

                <!-- Recomendación breve -->
                <TextView
                    android:id="@+id/text_recommendation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_analyzing_exposure"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="sans-serif" />

                

                <!-- Vistas antiguas ocultas para compatibilidad lógica (si el código aún las referencia) -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/text_traffic_light_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:id="@+id/light_red"
                            android:layout_width="1dp"
                            android:layout_height="1dp" />
                        <View
                            android:id="@+id/light_yellow"
                            android:layout_width="1dp"
                            android:layout_height="1dp" />
                        <View
                            android:id="@+id/light_green"
                            android:layout_width="1dp"
                            android:layout_height="1dp" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/text_traffic_light_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                    <TextView
                        android:id="@+id/text_traffic_light_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    <!-- Elementos secundarios removidos para una Home minimalista -->

        <!-- Exposición de 24 horas -->
        <TextView
            android:id="@+id/text_24h_exposure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:fontFamily="sans-serif"
            android:background="@drawable/rounded_background"
            android:padding="16dp"
            android:textColor="?attr/colorOnSurface" />

        <!-- Botón para ver detalle en EMF -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_view_emf_details"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_view_emf_detail"
            android:layout_marginBottom="24dp" />

        <!-- Botón de soporte Ko-fi -->
        <Button
            android:id="@+id/btnKofiSupport"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="12dp"
            android:text="@string/support_developer"
            android:drawableStart="@android:drawable/ic_menu_share"
            android:background="?attr/colorSecondary"
            android:textColor="?attr/colorOnSecondary"
            style="@style/Widget.Material3.Button" />

    <!-- Tarjeta ambiente eliminada para simplificar -->

    <!-- Información adicional removida -->

    </LinearLayout>

</ScrollView>
