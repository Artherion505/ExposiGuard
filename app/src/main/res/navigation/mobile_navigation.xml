    <fragment
        android:id="@+id/nav_emf"
        android:name="com.exposiguard.app.ui.EMFFragment"
        android:label="@string/menu_emf"
        tools:layout="@layout/fragment_emf" />

    <!-- Trends Fragment -->
    <fragment
        android:id="@+id/nav_trends"
        android:name="com.exposiguard.app.ui.TrendsFragment"
        android:label="@string/menu_trends"
        tools:layout="@layout/fragment_trends" />

    <!-- Settings Fragment -->
    <fragment
        android:id="@+id/nav_settings"
    android:name="com.exposiguard.app.ui.SettingsFragment"
        android:label="@string/menu_settings"
        tools:layout="@layout/fragment_settings" />

