    <!-- Home Fragment -->
    <fragment
        android:id="@+id/nav_home"
        android:name="com.exposiguard.app.ui.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <!-- WiFi Fragment -->
    <fragment
        android:id="@+id/nav_wifi"
        android:name="com.exposiguard.app.ui.WiFiFragment"
        android:label="@string/menu_wifi"
        tools:layout="@layout/fragment_wifi" />

    <!-- Bluetooth Fragment -->
    <fragment
        android:id="@+id/nav_bluetooth"
        android:name="com.exposiguard.app.ui.BluetoothFragment"
        android:label="@string/menu_bluetooth"
        tools:layout="@layout/fragment_bluetooth" />

    <!-- SAR Fragment -->
    <fragment
        android:id="@+id/nav_sar"
        android:name="com.exposiguard.app.ui.SarFragment"
        android:label="@string/menu_sar"
        tools:layout="@layout/fragment_sar" />

