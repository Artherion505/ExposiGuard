    <fragment
        android:id="@+id/nav_ambient_rf"
        android:name="com.exposiguard.app.ui.AmbientRfFragment"
        android:label="@string/menu_ambient_rf"
        tools:layout="@layout/fragment_ambient_rf" />
    <fragment
        android:id="@+id/nav_noise"
        android:name="com.exposiguard.app.ui.noise.NoiseFragment"
        android:label="@string/menu_noise"
